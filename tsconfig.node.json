{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext", // Gerar o código Javascript com o formato compatível com o ECMAScript mais recente.
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Node", // Como o TypeScript resolve as importações de módulos.
    "allowImportingTsExtensions": false, // true
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false, // true

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "composite": true, // Composto por várias partes interdependentes.
    "allowSyntheticDefaultImports": true // Pode importar módulos que não exportam um valor padrão 
  },
  "include": ["vite.config.ts"] // Especifica quais arquivos devem ser incluídos no processo de compilação. 
}




